%% Dispatch rules for mod_shop.

[
	{home,			[],												resource_shop_home,			[]},
	{overview,		["overview"],   								resource_shop_category,		[]},
	{overview,		["overview", "bybrand", brand],					resource_shop_category,		[]},
	{overview,		["overview", cat, "bybrand", brand],			resource_shop_category,		[]},
	{overview,		["overview", cat, subcat, "bybrand", brand], 	resource_shop_category,		[]},
	{overview,		["overview", cat],								resource_shop_category,		[]},
	{overview,		["overview", cat, subcat],						resource_shop_category,		[]},
	{product,		["product", id],								resource_shop_product,		[]},
	{product,		["product", id, slug],							resource_shop_product,		[]},
	{page,			["page", id],									resource_shop_page,			[]},
	{page,			["page", id, slug],								resource_shop_page,			[]},
	{news,			["news"],										resource_shop_news,			[]},
	{agenda,		["agenda"],										resource_shop_agenda,		[]},
	{about,			["about"],										resource_template,		[{template,"page.tpl"}]},
	{bikes,			["bike", id, slug],								resource_shop_bike,			[]},
	{compare,		["compare", cat, id],							resource_shop_compare,		[]},
	{search,   		["search"],										resource_shop_search,		[]},
	{shop_cart, 	["cart"],										resource_shop_cart,			[]},
	{shop_checkout, ["checkout"],									resource_shop_checkout,		[]},
	{shop_checkout_confirm, ["confirm"],							resource_shop_confirm,		[]},
	{shop_order_view, ["order","view", name],						resource_shop_order_view, []},

    % Extensions to the admin
    {admin_shop_sku,        ["admin", "sku"],                       resource_admin_shop_sku,[]},
    {admin_shop_sku_edit,   ["admin", "sku", id],                   resource_admin_shop_sku_edit,[]},
    {admin_shop_order,      ["admin", "order"],                     resource_admin_shop_order,[]},
    {admin_shop_order_view, ["admin", "order", "view"],             resource_admin_shop_order_view,[]},
    {admin_shop_order_view, ["admin", "order", id],                 resource_admin_shop_order_view,[]}
].
